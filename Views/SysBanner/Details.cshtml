@model MvcWeb.Models.Banner

@{ ViewData["Title"] = "Details"; }

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Banner Details</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.bannerIndex)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.bannerIndex)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.bannerState)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.bannerState)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.bannerContentUp)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.bannerContentUp)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.bannerContentDown)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.bannerContentDown)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProfilePicture)
            </dt>
            <dd class="col-sm-10">
                <img src="~/Uploads/@Model.ProfilePicture" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i> Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger rounded-0"><i class="fa fa-trash-alt"></i> Delete</a>
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i> Back to List</a>
        </div>
    </div>
</div