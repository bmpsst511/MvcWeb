    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productIndex)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productIndex)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productUnit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productUnit)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productPosition)
