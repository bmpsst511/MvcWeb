        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.employeeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.employeeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.employeeIntro)
        </dt>
